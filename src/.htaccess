#Редірект з HTTP на HTTPs
RewriteEngine On
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# ============================================
# 2. РЕДИРЕКТ С WWW НА БЕЗ WWW (опционально)
# ============================================
# Раскомментируйте, если хотите принудительно убирать www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ============================================
# 3. УДАЛЕНИЕ INDEX.HTML ИЗ URL
# ============================================
# Если в запросе есть /index.html, редиректим на корень
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html[\s?/] [NC]
RewriteRule ^index\.html$ / [R=301,L]

# Если index.html в конце любого пути
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.+/)index\.html[\s?] [NC]
RewriteRule ^(.+/)index\.html$ /$1 [R=301,L]

# ============================================
# 4. УДАЛЕНИЕ МНОЖЕСТВЕННЫХ СЛЕШЕЙ
# ============================================
# Убираем двойные и более слеши из URL
RewriteCond %{THE_REQUEST} \s//+
RewriteRule ^(.*)$ /$1 [R=301,L]

# ============================================
# 5. УДАЛЕНИЕ TRAILING SLASH ПОСЛЕ .HTML
# ============================================
# Если после .html есть слеш - убираем его
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^(.+\.html)/$
RewriteRule ^(.+\.html)/$ /$1 [R=301,L]

# ============================================
# 6. ОПЦИОНАЛЬНЫЕ ПРАВИЛА
# ============================================

# Принудительное добавление trailing slash для директорий (если нужно)
